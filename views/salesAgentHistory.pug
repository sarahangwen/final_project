doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Sales History
    link(rel="stylesheet", href="/css/salesHistory.css")
  body
    header
      nav
        ul
          li
            a(href='/salesAgentDash' class='link') Back to Dashboard

    main
      section
          table
            thead
              tr
                th Date
                th Product
                th Quantity (kg)
                th Price per Kg (UGX)
                th Total (UGX)
            tbody
            if sales && sales.length 
              each sale in sales
                tr
                  td #{moment(sale.saleDate).format("DD-MM-YYYY")}
                  td #{sale.produceName}
                  td #{sale.quantitySold}
                  td #{sale.pricePerKg}
                  td #{sale.pricePerKg * sale.quantitySold}
            //- else
            //-   p No sales history available.

