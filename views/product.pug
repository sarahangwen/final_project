doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Register Produce - KGL Grocery
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/product.css')
form#registerProduceForm(action="/addProduct" method="POST")
  h2 Register Produce
  .form-group
    label(for='produceName') Produce Name
    select#produceName(name='produceName' required='')
      option(value='') Select Produce
      option(value='Maize grains') Maize grains
      option(value='Soya beans') Soya beans
      option(value='Cow peas') Cow peas
      option(value='G-nuts') G-nuts
      option(value='Maize') Maize
  .form-group
    label(for='produceType') Produce Type
    select#produceType(name='produceType' required='')
      option(value='') Select Produce Type
      option(value='Legume') Legume
      option(value='Cereals') Cereals
  .form-group
    label(for='procureDate') Date
    input#procureDate(type='date' name='procureDate' required='')
  .form-group
    label(for='procureTime') Time
    input#procureTime(type='time' name='procureTime' required='')
  .form-group
    label(for='tonnage') Tonnage (kgs)
    input#tonnage(type='number' name='tonnage' required='' )
  .form-group
    label(for='cost') Cost (UgX)
    input#cost(type='number' name='cost' required='' )
  .form-group
    label(for='dealerName') Dealer Name
    input#dealerName(type='text' name='dealerName' required='' )
  .form-group
    label(for='branchName') Branch Name
    select#branchName(name='branchName' required='')
      option(value='') Select Branch
      option(value='Maganjo') Maganjo
      option(value='Matugga') Matugga
  .form-group
    label(for='contact') Dealer Contact
    input#contact(type='tel' name='contact' required='' )
  .form-group
    label(for='sellPrice') Price to Sell (UgX)
    input#sellPrice(type='number' name='sellPrice' required='' )
  button(type='submit') Register Produce
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
script(src='')
