doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Update Sale - KGL Grocery
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/sale.css')  
  body
    form#updateSaleForm(action="/updateSale?id="+sale._id method="POST" class="container mt-4")
      h2 Update Sale

      .form-group.mb-3
        label(for='produceName') Produce Name
        select#produceName(name='produceName' class='form-control')
          option(value='') Select Produce
          option(value='Maize grains' selected= sale.produceName == 'Maize grains') Maize grains
          option(value='Soya beans' selected= sale.produceName == 'Soya beans') Soya beans
          option(value='Cow peas' selected= sale.produceName == 'Cow peas') Cow peas
          option(value='G-nuts' selected= sale.produceName == 'G-nuts') G-nuts
          option(value='Maize' selected= sale.produceName == 'Maize') Maize

      .form-group.mb-3
        label(for='produceType') Produce Type
        select#produceType(name='produceType' class='form-control')
          option(value='') Select Type
          option(value='Legume' selected= sale.produceType == 'Legume') Legume
          option(value='Cereals' selected= sale.produceType == 'Cereals') Cereals

      .form-group.mb-3
        label(for='saleDate') Date of Sale
        input#saleDate(type='date' name='saleDate' class='form-control' value=sale.saleDate)

      .form-group.mb-3
        label(for='saleTime') Time of Sale
        input#saleTime(type='time' name='saleTime' class='form-control' value=sale.saleTime)

      .form-group.mb-3
        label(for='quantitySold') Quantity Sold (kgs)
        input#quantitySold(type='number' name='quantitySold' class='form-control' value=sale.quantitySold)

      .form-group.mb-3
        label(for='pricePerKg') Price per Kg (UgX)
        input#pricePerKg(type='number' name='pricePerKg' class='form-control' value=sale.pricePerKg)

      .form-group.mb-3
        label(for='buyerName') Buyer Name
        input#buyerName(type='text' name='buyerName' class='form-control' value=sale.buyerName)

      .form-group.mb-3
        label(for='buyerContact') Buyer Contact
        input#buyerContact(type='tel' name='buyerContact' class='form-control' value=sale.buyerContact)

      .form-group.mb-3
        label(for='branchName') Branch Name
        select#branchName(name='branchName' class='form-control')
          option(value='') Select Branch
          option(value='Maganjo' selected= sale.branchName == 'Maganjo') Maganjo
          option(value='Matugga' selected= sale.branchName == 'Matugga') Matugga

      .form-group.mb-4
        label(for='paymentMode') Payment Mode
        select#paymentMode(name='paymentMode' class='form-control')
          option(value='') Select Payment Mode
          option(value='Cash' selected= sale.paymentMode == 'Cash') Cash
          option(value='mobileMoney' selected= sale.paymentMode == 'mobileMoney') Mobile Money

      button(type='submit' class='btn btn-primary') Update Sale

    script(src='/js/sale.js') 
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
