doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Register Sale - KGL Grocery
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/sale.css')
form#registerSaleForm(action="/addSale/" method="POST")
  h2 Register Sale
  .form-group
    label(for='produceName') Produce Name
    select#produceName(name='produceName' )
      option(value='') Select Produce
      option(value='Maize grains') Maize grains
      option(value='Soya beans') Soya beans
      option(value='Cow peas') Cow peas
      option(value='G-nuts') G-nuts
      option(value='Maize') Maize
  .form-group
    label(for='produceType') Produce Type
    select#produceType(name='produceType' )
      option(value='') Select Type
      option(value='Legume') Legume
      option(value='Cereals') Cereals
  .form-group
    label(for='saleDate') Date of Sale
    input#saleDate(type='date' name='saleDate' )
  .form-group
    label(for='saleTime') Time of Sale
    input#saleTime(type='time' name='saleTime' )
  .form-group
    label(for='quantitySold') Quantity Sold (kgs)
    input#quantitySold(type='number' name='quantitySold' )
  .form-group
    label(for='pricePerKg') Price per Kg (UgX)
    input#pricePerKg(type='number' name='pricePerKg' )
  .form-group
    label(for='buyerName') Buyer Name
    input#buyerName(type='text' name='buyerName' )
  .form-group
    label(for='buyerContact') Buyer Contact
    input#buyerContact(type='tel' name='buyerContact'  )
  .form-group
    label(for='branchName') Branch Name
    select#branchName(name='branchName' )
      option(value='') Select Branch
      option(value='Maganjo') Maganjo
      option(value='Matugga') Matugga
  .form-group
    label(for='paymentMode') Payment Mode
    select#paymentMode(name='paymentMode'  )
      option(value='') Select Payment Mode
      option(value='Cash') Cash
      option(value='mobileMoney') mobile Money
  button(type='submit') Register Sale
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
script(src='')
