doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sign Up
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/signUp.css')
  body
    br
    .container
      form#signUpForm(action="/signingup" method="POST")
        .user-details
          .input-box
            span.detail First Name
            input#firstName(type='text' placeholder='Enter your First Name' name='firstName')
          .input-box
            span.detail Last Name
            input#lastName(type='text' placeholder='Enter your Last Name' name='lastName' )
          .input-box
            span.detail Phone Number
            input#phoneNumber(type='text' placeholder='Enter your Phone Number' name='phoneNumber' )
          .input-box
            span.detail Email
            input#email(type='email' placeholder='Enter your Email' name='email' )
          .input-box
            span.detail Password
            input#password(type='password' placeholder='Enter your password' name='password' )
          .input-box
            span.detail Confirm Password
            input#confirmPassword(type='password' placeholder='Confirm your password' name='password' )
          .form-group
            label(for='role') Role
            select#role(name='role' )
              option(value='') Select Role
              option(value='director') Director
              option(value='manager') Manager
              option(value='sales') Sales Agent
          .form-group
            label(for='branch') Branch
            select#branch(name='branch' )
              option(value='matugga') Matugga
              option(value='maganjo') Maganjo
          .button
              button(type='submit') Register
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
