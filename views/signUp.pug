doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sign Up - Karibu Groceries LTD
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f8f9fa;
      }
      .signup-container {
        max-width: 500px;
        margin: 60px auto;
        padding: 30px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }

  body
    .signup-container
      h2.text-center.mb-4 Sign Up

      form(action="/signingup", method="POST")
        .mb-3
          label.form-label(for="email") Email
          input#email.form-control(type="email", name="email", required)

        .mb-3
          label.form-label(for="phoneNumber") Phone Number
          input#phoneNumber.form-control(type="text", name="phoneNumber", required)

        .mb-3
          label.form-label(for="password") Password
          input#password.form-control(type="password", name="password", required)

        .mb-3
          label.form-label(for="confirmPassword") Confirm Password
          input#confirmPassword.form-control(type="password", name="confirmPassword", required)

        .mb-3
          label.form-label(for="role") Select Role
          select#role.form-select(name="role", required)
            option(value="") -- Select Role --
            option(value="managerMaganjo") Manager - Maganjo
            option(value="managerMatugga") Manager - Matugga
            option(value="salesAgentMaganjo") Sales Agent - Maganjo
            option(value="salesAgentMatugga") Sales Agent - Matugga
            option(value="director") Director

        button.btn.btn-success.w-100(type="submit") Sign Up

      if error
        p.text-danger.text-center.mt-3 #{error}

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
